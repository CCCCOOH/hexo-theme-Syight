@import '../_variables'
#post-title
    font-size: 2em
    width: 100%
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    margin-top: 20px
    color: $text-color-light
    margin-bottom: 20px

    #title
        &::before
            content: '《'
        &::after
            content: '》'